{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["dom", "es2015"],
    "module": "esnext",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "noEmit": false,
    "noUnusedLocals": false, // redo this
    "noUnusedParameters": false, // redo this
    "removeComments": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "declaration": false,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
