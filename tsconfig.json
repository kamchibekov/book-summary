{
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "target": "es2017",
    "module": "esnext",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "noEmit": false,
    "noUnusedLocals": false, // redo this
    "noUnusedParameters": false, // redo this
    "removeComments": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "declaration": false,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/config/types.ts"],
  "exclude": ["node_modules"]
}
